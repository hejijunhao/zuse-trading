PROJECT_NAME="Zuse Trading System"
API_V1_STR="/api/v1"
DEBUG=false
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database Connections - BOTH required for proper operation

# Direct connection (port 5432) - For Alembic migrations and schema changes
# Connects directly to PostgreSQL, bypassing pgBouncer
# Required for: DDL operations (CREATE/ALTER TABLE), long-running transactions, migrations
DATABASE_URL_DIRECT="postgresql://postgres.xxxxx:your-password@aws-0-region.pooler.supabase.com:5432/postgres"

# Transaction pooling connection (port 6543) - For application queries
# Connects through pgBouncer in transaction pooling mode
# Used for: FastAPI endpoints, background jobs, miners, analysts, traders
# NullPool pattern delegates all connection pooling to pgBouncer
DATABASE_URL_POOLED="postgresql://postgres.xxxxx:your-password@aws-0-region.pooler.supabase.com:6543/postgres"

